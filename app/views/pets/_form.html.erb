<%= simple_form_for pet do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :found_on %>
  <%= f.input :species, collection: Pet::SPECIES %>
  <% if pet.new_record? %>
    <%= f.submit 'Report pet', class: 'btn btn-primary' %>
  <% else %>
    <%= f.submit 'Update pet', class: 'btn btn-primary' %>
  <% end %>
<% end %>
